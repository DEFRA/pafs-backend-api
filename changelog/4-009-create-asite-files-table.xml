<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="4-009-create-asite-files-table" author="migration-team">
        <comment>Create pafs_core_asite_files table</comment>

        <createTable tableName="pafs_core_asite_files">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="asite_submission_id" type="INTEGER"/>
            
            <column name="filename" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            
            <column name="checksum" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="pafs_core_asite_files" cascadeConstraints="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
