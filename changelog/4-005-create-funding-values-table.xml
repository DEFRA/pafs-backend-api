<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="4-005-create-funding-values-table" author="migration-team">
        <comment>Create pafs_core_funding_values table</comment>

        <createTable tableName="pafs_core_funding_values">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="project_id" type="INTEGER"/>
            
            <column name="financial_year" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            
            <column name="fcerm_gia" type="BIGINT"/>
            
            <column name="local_levy" type="BIGINT"/>
            
            <column name="internal_drainage_boards" type="BIGINT"/>
            
            <column name="public_contributions" type="BIGINT"/>
            
            <column name="private_contributions" type="BIGINT"/>
            
            <column name="other_ea_contributions" type="BIGINT"/>
            
            <column name="not_yet_identified" type="BIGINT"/>
            
            <column name="total" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            
            <column name="asset_replacement_allowance" type="BIGINT"/>
            
            <column name="environment_statutory_funding" type="BIGINT"/>
            
            <column name="frequently_flooded_communities" type="BIGINT"/>
            
            <column name="other_additional_grant_in_aid" type="BIGINT"/>
            
            <column name="other_government_department" type="BIGINT"/>
            
            <column name="recovery" type="BIGINT"/>
            
            <column name="summer_economic_fund" type="BIGINT"/>
        </createTable>

        <createIndex indexName="index_pafs_core_funding_values_on_financial_year" tableName="pafs_core_funding_values">
            <column name="financial_year"/>
        </createIndex>

        <createIndex indexName="index_pafs_core_funding_values_on_project_id" tableName="pafs_core_funding_values">
            <column name="project_id"/>
        </createIndex>

        <createIndex indexName="funding_values_on_project_id_and_financial_year" tableName="pafs_core_funding_values">
            <column name="project_id"/>
            <column name="financial_year"/>
        </createIndex>

        <rollback>
            <dropTable tableName="pafs_core_funding_values" cascadeConstraints="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
