<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="7-create-scheduler-logs-table" author="migration-team">
    <comment>Create scheduler_logs table to track scheduled task execution history</comment>

    <createTable tableName="scheduler_logs">
      <column name="id" type="BIGSERIAL" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <!-- Task name -->
      <column name="task_name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>

      <!-- Instance that executed the task -->
      <column name="executed_by" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>

      <!-- Execution status -->
      <column name="status" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>

      <!-- Start and end timestamps -->
      <column name="started_at" type="TIMESTAMP WITHOUT TIME ZONE">
        <constraints nullable="false"/>
      </column>

      <column name="completed_at" type="TIMESTAMP WITHOUT TIME ZONE">
        <constraints nullable="true"/>
      </column>

      <!-- Duration in milliseconds -->
      <column name="duration_ms" type="INTEGER">
        <constraints nullable="true"/>
      </column>

      <!-- Result data (JSON) -->
      <column name="result" type="TEXT">
        <constraints nullable="true"/>
      </column>

      <!-- Error message if failed -->
      <column name="error_message" type="TEXT">
        <constraints nullable="true"/>
      </column>

      <!-- Error stack trace if failed -->
      <column name="error_stack" type="TEXT">
        <constraints nullable="true"/>
      </column>

      <!-- Triggered manually or by schedule -->
      <column name="trigger_type" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>

      <!-- User who triggered (if manual) -->
      <column name="triggered_by_user_id" type="BIGINT">
        <constraints nullable="true"/>
      </column>

      <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <!-- Indexes for efficient querying -->
    <createIndex indexName="idx_scheduler_logs_task_name" tableName="scheduler_logs">
      <column name="task_name"/>
    </createIndex>

    <createIndex indexName="idx_scheduler_logs_status" tableName="scheduler_logs">
      <column name="status"/>
    </createIndex>

    <createIndex indexName="idx_scheduler_logs_started_at" tableName="scheduler_logs">
      <column name="started_at"/>
    </createIndex>

    <createIndex indexName="idx_scheduler_logs_task_status" tableName="scheduler_logs">
      <column name="task_name"/>
      <column name="status"/>
    </createIndex>

    <rollback>
      <dropTable tableName="scheduler_logs" cascadeConstraints="true"/>
    </rollback>
  </changeSet>

</databaseChangeLog>
