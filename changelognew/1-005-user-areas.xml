<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="5-create-user-areas-table" author="migration-team">
        <comment>Create pafs_core_user_areas table</comment>

        <createTable tableName="pafs_core_user_areas">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="area_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="primary" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>

        <!-- Indexes for efficient querying -->
        <createIndex indexName="index_pafs_core_user_areas_on_area_id" tableName="pafs_core_user_areas">
            <column name="area_id"/>
        </createIndex>

        <createIndex indexName="index_pafs_core_user_areas_on_user_id" tableName="pafs_core_user_areas">
            <column name="user_id"/>
        </createIndex>

        <!-- Foreign key constraints -->
        <addForeignKeyConstraint baseTableName="pafs_core_user_areas" baseColumnNames="user_id" constraintName="fk_user_areas_user_id" referencedTableName="pafs_core_users" referencedColumnNames="id" onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="pafs_core_user_areas" baseColumnNames="area_id" constraintName="fk_user_areas_area_id" referencedTableName="pafs_core_areas" referencedColumnNames="id" onDelete="CASCADE"/>

        <rollback>
            <dropTable tableName="pafs_core_user_areas" cascadeConstraints="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
