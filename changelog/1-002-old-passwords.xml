<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1-002-create-old-passwords-table" author="migration-team">
        <comment>Create old_passwords table for password history tracking</comment>

        <createTable tableName="old_passwords">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="encrypted_password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password_archivable_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password_archivable_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
        </createTable>

        <createIndex indexName="index_password_archivableddu" tableName="old_passwords">
            <column name="password_archivable_type"/>
            <column name="password_archivable_id"/>
        </createIndex>

        <rollback>
            <dropTable tableName="old_passwords" cascadeConstraints="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
